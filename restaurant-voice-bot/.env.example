# Application Settings
APP_NAME=Restaurant Voice Bot
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=restaurant_bot
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/restaurant_bot

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Restaurant Configuration
RESTAURANT_NAME=My Restaurant
RESTAURANT_HOURS_OPEN=09:00
RESTAURANT_HOURS_CLOSE=22:00
RESTAURANT_TIMEZONE=America/New_York
RESTAURANT_PHONE=+1234567890

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7

# LangGraph Configuration
LANGGRAPH_CHECKPOINT_STORE=redis

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=True

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_CONVERSATION_TURNS=50

# Webhook URLs
WEBHOOK_BASE_URL=https://your-domain.com
TWILIO_WEBHOOK_PATH=/api/v1/twilio/voice

# Feature Flags
ENABLE_RECORDING=False
ENABLE_TRANSCRIPTION=True
ENABLE_ANALYTICS=True
